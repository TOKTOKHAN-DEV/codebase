{
  "name": "codebase",
  "private": true,
  "scripts": {
    "version": "changeset version",
    "release": "changeset publish",
    "ci:publish": "pnpm publish -r",
    "build": "turbo run build --cache-dir=.turbo",
    "build:packages": "turbo run build --filter='./configs/*' --filter='./packages/*' --filter='./packages/cli-plugins/*' --filter='./packages/react/*' --filter='./packages/zustand/*' --cache-dir=.turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:codebase": "pnpm --filter @codebase/cli dev",
    "start:starter": "pnpm --filter @codebase/starter dev",
    "commit": "codebase commit",
    "slack": "tsx ./scripts/slack.ts",
    "slack:test": "pnpm slack 23 '[{\"name\": \"@codebase/starter\", \"version\": \"1.2.0\"}, {\"name\": \"@codebase/github\", \"version\": \"0.8.9\"}]'"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@codebase/cli": "workspace:*",
    "@codebase/cli-plugin-commit": "workspace:*",
    "@codebase/eslint-config": "workspace:*",
    "@codebase/node": "workspace:*",
    "@codebase/prettier-config": "workspace:*",
    "@codebase/rollup-config": "workspace:*",
    "@codebase/ts-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.17.2",
    "rollup-jest": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "turbo": "^2.4.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
